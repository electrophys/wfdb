{
    "name": "WFDB",
    "build": {
        "dockerfile": "Dockerfile"
    },
    "postCreateCommand": "rm -rf build && meson setup build && ninja -C build && ninja -C build install",
    "remoteEnv": {
        "WFDB_NO_NET_CHECK": "1"
    },
    "mounts": [
        "source=${localEnv:HOME}${localEnv:USERPROFILE}/.ssh,target=/root/.ssh,type=bind,readonly"
    ],
    "customizations": {
        "vscode": {
            "extensions": [
                "ms-vscode.cpptools"
            ]
        }
    }
}
